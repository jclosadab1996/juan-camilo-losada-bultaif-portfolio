---
import Layout from '../../layouts/Layout.astro'
import Header from '../Header.astro'
import Bento from '../Bento.astro'
import Experience from '../Experience.astro'
import Projects from '../Projects/Projects.astro'
import Skills from '../Skills.astro'
import Contact from '../Contact.astro'
import Footer from '../Footer.astro'
import Nav from '../Nav.astro'

const { currentLocale = 'es' } = Astro

const locales = {
  es: {
    title: 'Juan Camilo Losada B | Portafolio',
    description:
      'Contrata a un Desarrollador Web FullStack con conocimiento en tecnologías modernas y buenas prácticas, y con experiencia en trabajos en entornos criticos.'
  },
  en: {
    title: 'Juan Camilo Losada B | Portfolio',
    description:
      'Hire a FullStack Web Developer with knowledge in modern technologies and best practices, and with experience in critical environments.'
  }
}

interface Props {
  image?: string
}

const { image } = Astro.props

const ogImage = image || new URL(`${Astro.site}og-image.png`).href
---

<Layout
  title={locales[currentLocale].title}
  description={locales[currentLocale].description}
  image={ogImage}
>
  <Header />
  <main>
    <Bento />
    <Experience />
    <Projects />
    <Skills />
    <Contact />
  </main>
  <Nav />
  <Footer />
</Layout>
